<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogReview</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogReview.styles.css" asp-append-version="true" />

    <style>
        [data-bs-theme="dark"] {
            --bs-primary: #019;
            --bs-primary-bg-subtle: #019;
            --bs-primary-bg-subtle-dark: #019
        }

        [data-bs-theme="dark"] .btn-primary {
            --bs-btn-bg: #019
        }

        [data-bs-theme="dark"] .nav-link {
            color: #fff;
        }

        [data-bs-theme="light"] .nav-link {
            color: #000;
        }

    </style>

</head>
<body>
    <script>
        function colorButton(button, text, addClass, removeClass) {
            button.textContent = text;
            if (removeClass != null) {
                button.classList.remove(removeClass);
            }
            button.classList.add(addClass);
        }
        function makeDark() {
            document.documentElement.setAttribute('data-bs-theme', 'dark')
            localStorage.setItem("theme", "dark");
        }
        function makeLight() {
            document.documentElement.setAttribute('data-bs-theme', 'light')
            localStorage.setItem("theme", "light");
        }

        var mode = localStorage.getItem("theme");
        if (mode != null) {
            if (mode == "dark") {
                makeDark();
            } else {
                makeLight();
            }
        }
    </script>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Feed" asp-action="Index">BlogReview</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="margin-left: auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Feed" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-auto">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Index">@User.Identity.Name</a>
                            </li>
                            <li class="nav-item me-auto">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-auto">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                    <button class="btn shadow" id="btnSwitch"></button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        var toggleButton = document.getElementById('btnSwitch');
        if (mode == "dark") {
            colorButton(toggleButton, 'Light mode', 'btn-light', null);
        } else {
            colorButton(toggleButton, 'Dark mode', 'btn-dark', null);
        }
        toggleButton.addEventListener('click', () => {
            if (document.documentElement.getAttribute('data-bs-theme') == 'dark') {
                makeLight();
                colorButton(toggleButton, 'Dark mode', 'btn-dark', 'btn-light');
            } else {
                makeDark();
                colorButton(toggleButton, 'Light mode', 'btn-light', 'btn-dark');
            }
        })
    </script>
</body>
</html>

